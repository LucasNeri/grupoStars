<%- include('../includes/head')%>
<%- include('../includes/nav')%>

<div class="container">
  <!-- Botão voltar -->
  <ul class="pagination">
    <li class="page-item">
      <a class="btn btn-outline-secondary" onclick="history.go(-1);" aria-label="Previous">
        <span aria-hidden="true">&laquo; retornar</span>
      </a>
    </li>
  </ul>
  
  <div class="row">
    <div class="col-lg-2"></div>

    <!-- Cadastro novo colaborador -->
    <div class="col-lg-8 my-3">
      
      <h1 class="text-center">Colaboradores</h1>
      <p class="text-center lead">Cadastre ou edite seu colaborador abaixo.</p>
      </br></br>

      <%- include('../includes/messages') %>

      <!-- Formulario de cadastro -->
      <% if(colaborador._id) { %>
      <form action="/colaborador/edit/<%= colaborador._id %>" method="POST">
      <% } else { %>
      <form action="/colaborador/register/<%= empresa._id %>" method="POST">
      <% } %>

        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <% if(colaborador._id) { %>
        <input type="hidden" name="empresa_id" value="<%= colaborador.empresa_id %>">
        <% } else { %>
        <input type="hidden" name="empresa_id" value="<%= empresa._id %>">
        <% } %>

        <div class="mb-3">
          <label>Código</label>
          <input value="<%= colaborador.codigo %>" type="tel" class="form-control" name="codigo">
        </div>

        <div class="mb-3">
          <label>CPF</label>
          <input value="<%= colaborador.cpf %>" type="tel" class="form-control"  id="cpf" name="cpf" data-mask="000.000.000-00" placeholder="ex: 000.000.000-00" >
        </div>

        <div class="mb-3">
          <label>Nome</label>
          <input value="<%= colaborador.nome %>" type="text" class="form-control" name="nome" placeholder="ex: João Vicente">
        </div>

        <div class="mb-3">
          <label>Email</label>
          <input value="<%= colaborador.email %>" type="email" class="form-control" name="email" placeholder="ex: joaovicente@gmail.com">
        </div>

        <div class="mb-3">
          <label>Telefone</label>
          <input value="<%= colaborador.telefone %>" type="tel" class="form-control" name="telefone" data-mask="(00) 00000-0000" placeholder="ex :(00) 00000-0000">
        </div>
        
        <div class="mb-3">
          <label>Endereço</label>
          <input value="<%= colaborador.endereco %>" type="text" class="form-control" name="endereco" placeholder="ex: Rua Exemplo, 0" name="endereco">
        </div>

        <% if(colaborador._id) { %>
        <button type="submit" class="btn btn-primary">Editar</button>
        <% } else { %>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <% } %>

      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('../includes/footer')%>